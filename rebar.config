%% vim: set filetype=erlang : -*- erlang -*-

{erl_opts, [
            warnings_as_errors,
            warn_export_all,
            warn_untyped_record
           ]}.

{xref_checks, [
               fail_on_warning,
               undefined_function_calls
              ]}.

{cover_enabled, true}.

{edoc_opts, [
             {doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}
            ]}.
{validate_app_modules, true}.

{escript_name, erlup}.
{escript_incl_apps, [getopt]}.

{profiles,
 [{prod,
   [
    {deps, [{getopt, "0.8.2"}]},
    {erl_opts, [no_debug_info]},
    {overrides,
     [
      {add, getopt, [{erl_opts, [no_debug_info]}]}
     ]}
   ]},
  {test,
   [
    {erl_opts, [export_all]}
   ]}
 ]}.
